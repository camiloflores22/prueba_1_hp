@model prueba_1_hp.Models.Asignatura

@{
    ViewData["Title"] = "Edit";
}

<h1>Modo Editor</h1>

<h4>Asignatura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAsignatura" />
            <div class="form-group">
                <label asp-for="NombreAsignatura" class="control-label"></label>
                <input asp-for="NombreAsignatura" class="form-control" />
                <span asp-validation-for="NombreAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionAsignatura" class="control-label"></label>
                <input asp-for="DescripcionAsignatura" class="form-control" />
                <span asp-validation-for="DescripcionAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodigoAsignatura" class="control-label"></label>
                <input asp-for="CodigoAsignatura" class="form-control" />
                <span asp-validation-for="CodigoAsignatura" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaActualizacion" class="control-label"></label>
                <input asp-for="FechaActualizacion" class="form-control" />
                <span asp-validation-for="FechaActualizacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div> 
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Lista Negra</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
